<%= link_to 'step_3', next_wizard_path %><br>

<h1><%= t(:about_you, scope: 'view') %></h1>

<%= render layout: 'form' do |f| %>

  <div class="field">
    <%= f.label t(:name, scope: 'view') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t(:date_of_birth, scope: 'view') %><br>
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label t(:bio, scope: 'view') %><br>
    <%= f.text_area :bio %>
  </div>

<% end %>
